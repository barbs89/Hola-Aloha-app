<h1>Your Profile</h1>

<%= form_with(model: @profile, url: profile_path, local: true) do |form| %>

    <div class="field">
    <%= form.label :first_name %><br />
    <%= form.text_field :first_name, required: true %>
    </div>

    <div class="field">
        <%= form.label :last_name %><br />
        <%= form.text_field :last_name, required: true  %>
    </div>
    <div class="field">
        <%= form.label :date_of_birth %><br />
        <%= form.date_select :date_of_birth, start_year: 1900, end_year: Time.now.year, required: true  %>
    </div>
    <div class="field">
        <%= form.label :image %>
        <%= form.hidden_field :image, value: @profile.image %>
        <%= form.file_field :image, required: true%>
    </div>
      <br />
     <div class="field">
        <%= form.label :house_number %><br />
        <%= form.text_field :house_number, required: true  %>
    </div>
    <br />
    <div class="field">
        <%= form.label :street_name %><br />
        <%= form.text_field :street_name, required: true  %>
    </div>
    <br />
    <div class="field">
        <%= form.label :suburb %><br />
        <%= form.text_field :suburb, required: true  %>
    </div>
    <br />
    <div class="field">
        <%= form.label :state %><br />
        <%= form.text_field :state, required: true  %>
    </div>
    <br />
    <div class="field">
        <%= form.label :postcode %><br />
        <%= form.text_field :postcode, required: true  %>
    </div>
    <br />
    <div class="field">
        <%= form.label :country %><br />
        <%= form.text_field :country, required: true  %>
    </div>
    <br />
    <p>
        <%= form.submit %>
    </p>

<% end %>

<%= link_to "Cancel", profile_path %> 

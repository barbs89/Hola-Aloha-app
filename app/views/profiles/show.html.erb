<h1>Your Profile</h1>

<%= image_tag @profile.image_url(:medium) unless @profile.image_data.nil? %>
<br />
<p>
    <strong>Full Name:</strong>
    <%= @profile.full_name %>
</p>
<p>
    <strong>Date of Birth:</strong>
    <%= @profile.date_of_birth %>
</p>

<p>
    <strong>Address:</strong>
    <%= @profile.full_address %>
</p>



<h2>Incomplete Translations</h2>
<%= render 'jobs/jobs', jobs: @jobs_incomplete %>

<hr>

<h2>Completed Translations</h2>
<%= render 'jobs/jobs', jobs: @jobs_complete %>

<% if user_signed_in? %>
    <%= link_to "Home", root_path %> |
    <%= link_to "Edit Profile", profile_edit_path %> |
    <%= link_to "Logout", destroy_user_session_path, method: :delete %>
<% else %>
    <%= link_to "Login", new_user_session_path %> |
    <%= link_to "Sign up", new_user_registration_path %>
<% end %>

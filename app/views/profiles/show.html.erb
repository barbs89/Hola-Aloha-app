<head>
		<title>Your Profile</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="profiles/stylesheet" href="app/assets/stylesheets/application.css" />
</head>
    <div class="box">
			<div class="image fit">
            <%= image_tag @profile.image_url(:medium) unless @profile.image_data.nil? %>
            </div>
			<div class="content">
				<h3><%= @profile.full_name %></h3>
                <br />
				<h4><%= @profile.date_of_birth %></h4>
                <h4><%= @profile.full_address %></h4>
			</div>
		</div>
    <br />
    
    <%= link_to  "Edit Profile", profile_edit_path  %>
  
    <br />
    
    <div id="jobstatus">
         <%= render 'jobs/jobs', jobs: @jobs_incomplete %>
        <%= render 'jobs/jobs', jobs: @jobs_complete %>
    </div>
</section>






<head>
		<title>Jobs</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="jobs/stylesheet" href="app/assets/stylesheets/application.css" />
	</head>
<p id="notice"><%= notice %></p>

<h3>Jobs</h3>

<%= form_with scope: :language_from, method: :get, local: true do |f| %>
<%= f.label :search_language_name %>
<%= f.text_field :search %>
<%= f.submit :search %>
<% end %>
 
<table>
  <thead>
    <tr>
      <th>Customer Name:</th>
      <th>Language from:</th>
      <th>Language to:</th>
      <th>Subject:</th>
      <th>Description:</th>
      <th>Price:</th>
      <th>Paid at</th>
      <th>Stripe charge</th>
      <th>Completed at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.user.email %></td>
        <td><%= job.language_from.en %></td>
        <td><%= job.language_to.en %></td>
        <td><%= job.subject %></td>
        <td><%= job.description %></td>
        <td><%= job.price %></td>
        <td><%= job.paid_at %></td>
        <td><%= job.stripe_charge_id %></td>
        <td><%= job.completed_at %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />



<br />
<%= link_to 'New Job', new_job_path %>

<%= form_with(model: request, url: requests_path, local: true) do |f| %>

    <div class="field">  
        <%= f.label :subject %><br />
        <%= f.text_field :subject, required: true  %>
    </div>
    <br />
    <div class="field">  
        <%= f.label :description %><br />
        <%= f.text_area :description, required: true  %>
    </div>
    <br />
    <div class="field">  
        <%= f.label 'From' %>
		<%= f.select :lang_from, options_for_select(Request::LANG_OPTIONS, selected: f.object.lang_from), :include_blank => true %>
		<%= f.label 'To' %>
		<%= f.select :lang_to, options_for_select(Request::LANG_OPTIONS, selected: f.object.lang_to), :include_blank => true %>
    </div>
    <br />
    <div class="field">  
        <%= f.label :file_data %><br />
        <%= f.file_field :file_data %>
    </div>
    <br />
    <div class="field">  
        <%= f.hidden_field :user_id, value: current_user.id %>
    </div>
    <br />
    <p>
        <%= f.submit %>
    </p>

<% end %>


